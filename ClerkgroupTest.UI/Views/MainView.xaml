<Window x:Class="ClerkgroupTest.UI.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClerkgroupTest.UI"
        xmlns:viewmodels="clr-namespace:ClerkgroupTest.UI.ViewModels.Components"
        xmlns:components="clr-namespace:ClerkgroupTest.UI.Components" 
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type viewmodels:LayoutViewModel}">
                <components:Layout/>
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding LayoutViewModel}"/>
    </Grid>
</Window>
