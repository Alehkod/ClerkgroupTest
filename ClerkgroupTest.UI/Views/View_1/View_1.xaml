<UserControl x:Class="ClerkgroupTest.UI.Views.View_1.View_1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClerkgroupTest.UI.Views.View_1"
             xmlns:viewmodels="clr-namespace:ClerkgroupTest.UI.ViewModels.Views" d:DataContext="{d:DesignInstance Type=viewmodels:ViewModel_1}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type viewmodels:ViewModel_1Authorized}">
                <local:View_1Authorized/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:ViewModel_1NoAuthorized}">
                <local:View_1NoAuthorized/>
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</UserControl>
