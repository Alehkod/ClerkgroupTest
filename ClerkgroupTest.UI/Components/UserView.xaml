<UserControl x:Class="ClerkgroupTest.UI.Components.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClerkgroupTest.UI.Components"
             xmlns:viewmodels="clr-namespace:ClerkgroupTest.UI.ViewModels.Views"
             xmlns:views="clr-namespace:ClerkgroupTest.UI.Views"
             xmlns:view1="clr-namespace:ClerkgroupTest.UI.Views.View_1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type viewmodels:ViewModel_1}">
                <view1:View_1/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:ViewModel_2}">
                <views:View_2/>
            </DataTemplate>

        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</UserControl>
